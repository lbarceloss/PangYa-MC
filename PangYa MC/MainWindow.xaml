<Window x:Class="PangYa_MC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PangYa_MC"
        Title="PangYa MultiClient"
        Height="340" Width="560"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Grid>
        <!-- Fundo Acrílico -->
        <Border Background="#CC000000" CornerRadius="12" Padding="15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Linha para Título e Botão Fechar -->
                    <RowDefinition Height="Auto"/>
                    <!-- Linha para Título do Executável -->
                    <RowDefinition Height="Auto"/>
                    <!-- Linha para Caixa de Texto e Botões -->
                    <RowDefinition Height="*"/>
                    <!-- Linha para Área de Logs -->
                </Grid.RowDefinitions>

                <!-- Cabeçalho (Título + Botão Fechar) -->
                <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" LastChildFill="True">
                    <!-- Título -->
                    <TextBlock Text="PangYa MC - ꧁𓊈𒆜🅶🅷🅾🆂🆃.🆂🆈🆂𒆜𓊉꧂"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>

                    <!-- Botão Fechar -->
                    <Button x:Name="btnFechar"
                            Content="X"
                            Width="35" Height="35"
                            Background="#FF4444"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Click="btnFechar_Click"/>
                </DockPanel>

                <!-- Título do Executável -->
                <TextBlock Text="Selecione o executável ProjectG.exe:"
                           Foreground="Red"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,10,0,5"
                           Grid.Row="1"/>

                <!-- Caixa de Texto + Botões -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,10">
                    <TextBox x:Name="txtPath"
                             Width="350"
                             Background="#222"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="6"
                             FontSize="13"
                             Margin="0,0,10,0"/>
                    <Button x:Name="btnSelecionar"
                            Content="..."
                            Width="30"
                            Height="30"
                            Background="#FF8800"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="btnSelecionar_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="btnIniciar"
                            Content="Iniciar"
                            Width="115"
                            Height="30"
                            Background="#FF8800"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="btnIniciar_Click"/>
                </StackPanel>

                <!-- Área de Logs -->
                <RichTextBox x:Name="rtbLog"
                             Grid.Row="3"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="#222"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="10"
                             FontSize="13"
                             Margin="0,0,0,10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
